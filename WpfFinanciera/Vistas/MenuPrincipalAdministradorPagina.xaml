<Page x:Class="WpfFinanciera.Vistas.MenuPrincipalAdministradorPagina"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfFinanciera.Vistas"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1336"
      Title="MenuPrincipalAdministradorPagina">

    <Grid Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock FontSize="60">Menú Principal Administrador</TextBlock>
            <TextBlock Name="txtBlockNombre" FontSize="30"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button FontSize="40">Registrar Solicitud de Crédito</Button>
            <Button FontSize="40">Consultar Solcitides de Crédito</Button>
            <Button FontSize="40">Registrar Nueva Condición de Crédito</Button>
            <Button FontSize="40">Registrar Cliente</Button>
            <Button FontSize="40">Evaluar Solicitud de Crédito</Button>
            <Button FontSize="40">Registrar Política de Otorgmaiento de Crédito</Button>
            <Button FontSize="40">Registrar Checklist</Button>
        </StackPanel>
    </Grid>
</Page>
